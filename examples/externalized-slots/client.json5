{
  manifest_version: "0.1.0",
  program: {
    image: "alpine:3.20",
    entrypoint: [
      "/bin/sh",
      "-lc",
      "while true; do echo \"[client] calling $API_URL\"; wget -qO- \"$API_URL\" || true; sleep 2; done",
    ],
    env: {
      API_URL: "${slots.api.url}",
    },
  },
  slots: {
    api: { kind: "http" },
  },
}
